platform :ios, '9.0'
use_frameworks!

def app_pods
    pod 'TPKeyboardAvoiding', '1.3'
    pod 'AFNetworking', '~> 3.0'
    pod 'Tabman', '1.10.2'
    pod 'MBProgressHUD', '~> 1.1.0'
    pod 'AKSideMenu'
end

def test_pods
    pod 'InstantMock'
end

target 'LocadoraOleTraining' do
    app_pods
    target 'LocadoraOleTrainingTests' do
        test_pods
        inherit! :search_paths
    end
    target 'LocadoraOleTrainingUITests' do
        test_pods
        inherit! :search_paths
    end
end
